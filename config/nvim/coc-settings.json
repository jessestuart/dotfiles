{
  "codeLens.enable": true,
  "diagnostic.virtualText": true,
  "git.addGlameToVirtualText": false,
  "git.enableGutters": false,
  "json.schemas": {
    "https://json.schemastore.org/package.json": "/package.json",
    "https://json.schemastore.org/renovate.json": "/renovate.json",
    "https://json.schemastore.org/tsconfig.json": "/tsconfig.json",
    "https://json.schemastore.org/tslint.json": "/tslint.json"
  },
  "npm.binPath": "yarn",
  "prettier.eslintIntegration": true,
  "prettier.semi": false,
  "suggest.autoTrigger": "always",
  "suggest.enablePreview": true,
  "tsserver.log": "normal",
  "typescript.preferences.noSemicolons": true,
  "typescript.preferences.quoteStyle": "single",

  "yaml.schemas": {
    "kubernetes": "/*.yaml",
    "https://json.schemastore.org/circleciconfig": "/.circleci/config.yaml",
    "helm": "/values.yaml"
  },
  "languageserver": {
    "Dockerfile": {
      "command": "docker-langserver",
      "args": ["--stdio"],
      "filetypes": ["Dockerfile"]
    },
    "yaml": {
      "command": "yaml-language-server",
      "args": ["--stdio"],
      "filetypes": ["yaml"]
    },
    "typescript": {
      "command": "tsserver",
      "filetypes": ["typescript", "typescript.tsx"]
    }
  }
}
