{
  "coc.github.enable": true,
  "coc.source.dictionary.enable": true,
  "coc.source.dictionary.shortcut": "<leader><leader>d",
  "codeLens.enable": true,
  "diagnostic.displayByAle": true,
  "diagnostic.virtualText": true,
  "docker.enable": true,
  "eslint.enable": true,
  "eslint.autoFix": true,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  // "git.addGBlameToVirtualText": true,
  // "git.addGlameToVirtualText": false,
  "git.enableGutters": false,
  "git.realtimeGutters": false,
  "git.signOffset": 2,
  "homeassistant.enable": true,
  "homeassistant.hostUrl": "https://ha.jesses.io/",
  "json.enable": true,
  "json.schemas": [
    {
      "kubernetes": "/*.yaml"
    },
    {
      "https://json.schemastore.org/package.json": "/package.json"
    },
    {
      "https://json.schemastore.org/renovate.json": "/renovate.json"
    },
    {
      "https://json.schemastore.org/tsconfig.json": "/tsconfig.json"
    },
    {
      "https://json.schemastore.org/tslint.json": "/tslint.json"
    },
    {
      "https://json.schemastore.org/eslintrc": [
        ".eslintrc",
        ".eslintrc.js",
        "eslint.config.js"
      ]
    },
    {
      "http://json.schemastore.org/ansible-stable-2.7.json": [
        "/main.yml",
        "/roles/*.yml",
        "/group_vars/**/*.yml",
        "/host_vars/**/*.yml",
        "/*playbook.yml"
      ]
    },
    {
      "http://json.schemastore.org/circleciconfig": [
        "/.circleci/config.yml",
        "/orbs/**/*.yml"
      ]
    }
  ],
  "languageserver": {
    "Dockerfile": {
      "args": ["--node-ipc"],
      "module": "/usr/local/bin/docker-langserver",
      "filetypes": ["Dockerfile"]
    },
    "typescript": {
      "args": ["--node-ipc"],
      "filetypes": [
        "typescript",
        "typescript.tsx",
        "javascript",
        "javascript.jsx"
      ],
      "module": "/usr/local/bin/typescript-language-server"
    },
    "vimls": {
      "args": ["--node-ipc"],
      "filetypes": ["vim"],
      "initializationOptions": {
        "diagnostic": {
          "enable": true
        },
        "indexes": {
          "count": 3,
          "gap": 100,
          "runtimepath": true
        },
        "iskeyword": "vim iskeyword option",
        "runtimepath": "~/.config/nvim",
        "suggest": {
          "fromRuntimepath": true,
          "fromVimruntime": true
        },
        "vimruntime": "~/.config/nvim"
      },
      "module": "/usr/local/bin/vim-language-server"
    },
    "yaml": {
      "args": ["--node-ipc"],
      "filetypes": ["yaml"],
      "module": "/usr/local/bin/yaml-language-server"
    }
  },
  "npm.binPath": "/usr/local/bin/yarn",
  "prettier.eslintIntegration": true,
  "prettier.semi": false,
  "prettier.proseWrap": "always",
  "suggest.autoTrigger": "always",
  "suggest.enablePreview": true,
  "tslint.autoFixOnSave": true,
  "tsserver.log": "normal",
  "typescript.preferences.quoteStyle": "single",
  "typescript.referencesCodeLens.enable": true,
  "typescript.showUnused": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.completeFunctionCalls": true,
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.completion": true,
  "yaml.schemas": {
    "kubernetes": "/*.yaml"
  }
}
